<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryImage">
    <ImageView
        android:id="@+id/show_image_gallery"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true">
    </ImageView>

    <Button
        android:id="@+id/button_back_gl"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/show_image_gallery"
        android:text="Choose again" />

    <Button
        android:id="@+id/button_next_gl"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/button_back_gl"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/button_back_gl"
        android:text="next"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>