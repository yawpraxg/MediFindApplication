<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/show_result_layout">

    <TextView
        android:id="@+id/show_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:text="RESULT"
        android:textStyle="bold">
    </TextView>

    <ImageView
        android:id="@+id/show_result_imageResult"
        android:layout_width="224dp"
        android:layout_height="224dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/show_result_title"
        android:layout_centerHorizontal="true">
    </ImageView>

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/show_result_imageResult"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Brand Name: "
        android:textSize="24dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/generic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/brand_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Generic Name: "
        android:textSize="20dp">
    </TextView>

    <TextView
        android:id="@+id/dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/generic_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Dosage: "
        android:textSize="16dp">
    </TextView>

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/dosage"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Size: "
        android:textSize="16dp">
    </TextView>

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/dosage"
        android:layout_toRightOf="@id/size"
        android:layout_marginLeft="120dp"
        android:text="Color: "
        android:textSize="16dp">
    </TextView>

    <TextView
        android:id="@+id/properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/size"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Properties"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/side_effects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/properties"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Side Effects"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>

</RelativeLayout>